<% @menu_page = :boxes %>
<%= render 'account/account_nav', :locals => { :menu_page => @menu_page } %>
<div class="grid_9">
<% if !@boxes || @boxes.size == 0 %>
You do not have any boxes in storage order under management. Click <a href="/account/store_more_boxes">here</a> to start storing boxes!
<% else %>
<table class="prices_table"><tr>
	<th>Box ID</th>
	<th>Status</th>
	<th>Box Source</th>
	<th>Description</th>
	<th>Inventory</th>
	<th>Edit</th>
	<th>Label</th>
	</tr>
	<% @boxes.each do |box| %>
	  <tr>
		<td><%= box.id %></td>
		<td><%= box.status_en %></td>
		<td><%= box.box_type == Box::CUST_BOX_TYPE.to_s ? "Your box" : "Visible Closet box" %></td>
		<td width="150px"><%= box.description %></td>
		<td>
			<% if box.indexing_status == Box::INDEXING_REQUESTED %>
				Soon!
			<% elsif box.indexing_status == Box::INDEXED %>
				<a href="/boxes/<%= box.id %>/stored_items">Inventory</a>
			<% else %>
				NA
			<% end %>
		</td>
	    <td><%= link_to 'Edit', edit_box_path(box) %></td>
		<td>
			<% if box.box_type == Box::CUST_BOX_TYPE && box.status == Box::BEING_PREPARED_STATUS %>
					<a href="/box/<%= box.id %>/get_label">Shipping label</a>
			<% else %>
				NA
			<% end %>
		</td>
	  </tr>
	<% end %>
</table>
<% end %>
<br />
</div>
