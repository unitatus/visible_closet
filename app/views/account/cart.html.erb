<% @menu_page = :cart %>
<%= render 'account_nav', :locals => {:menu_page => @menu_page} %>
<div id="internal-right">
<p class="notice"><%= flash[:notice] %></p>
<p class="alert"><%= flash[:alert] %></p>
<%= render 'account_error_messages' %>
<% if @cart.cart_items.empty? %>
    You have no items in your cart.
<% else %><br>
<div class="graybox">
    <table>
        <thead>
            <tr>
              <th>Product #</th>
              <th>Description</th>
              <th>Price</th>
              <th>Estimate Cost/Month</th>
              <th>Quantity</th>
              <th>Update Quanitity</th>
              <th>Remove</th>
            </tr>
          </thead>
          <tbody class="top-line bottom-line">
			<% @cart.cart_items.each do |cart_item| %>
		      <% product = Product.find(cart_item.product_id) %>
			<%= form_tag "/account/update_cart_item", :class => "standard" do %>
            <tr >
                <td>#<%= product.id %></td>
                <td><%= product.name %></td>
                <td><%= number_to_currency(product.price) %> <%= product.price_comment %></td>
                <td><%= number_to_currency(product.price * cart_item.quantity) %></td>
	                <td><%= text_field_tag(:quantity, cart_item.quantity, :size => 5, :align => "middle") %></td>
	                <td><%= hidden_field_tag(:cart_item_id, cart_item.id) %>
					<%= submit_tag("Update", :class => 'button', :name => 'commit') %>
				</td>
                <td><a href="/account/remove_cart_item?cart_item_id=<%= cart_item.id %>">Remove</a></td>
            </tr>
				<% end # form tag %>
			<% end # cart item loop %>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" align="right" class="estimate">
                    <p>Estimated Total / Month*:</p>
                    <p class="tiny">*Size of your box assumed to be 1 cubic foot. We will measure your box when we receive it to determine your final cost.</p>
                </td>
                <td class="estimate"><%= number_to_currency(@cart.estimated_total) %></td>
                <td colspan="3" class="checkout">
	<% if !@cart.cart_items.empty? %>
                    <a href="/account/check_out"><img src="/images/checkout.gif" alt="Checkout" /></a>
	<% end %>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
<% end %>
</div>
<div class="clearer"></div>